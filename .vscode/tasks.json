{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mypy: Type Check",
            "type": "shell",
            "command": "uv",
            "args": ["run", "--extra", "test", "mypy", "src/"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                {
                    "owner": "mypy",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.+?):(\\d+):(\\d+): (error|warning|note): (.+)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                        }
                    ]
                }
            ]
        },
        {
            "label": "make: CI for Developers",
            "type": "shell",
            "command": "make",
            "args": ["ci_for-developers"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc",
                {
                    "owner": "mypy",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.+?):(\\d+):(\\d+): (error|warning|note): (.+)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                        }
                    ]
                }
            ]
        },
        {
            "label": "make: Auto Fix",
            "type": "shell",
            "command": "make",
            "args": ["auto-fix"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "make: QA (Fix + Type Check)",
            "type": "shell",
            "command": "make",
            "args": ["qa"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                {
                    "owner": "mypy",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.+?):(\\d+):(\\d+): (error|warning|note): (.+)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                        }
                    ]
                }
            ]
        },
        {
            "label": "pytest: Run Tests",
            "type": "shell",
            "command": "uv",
            "args": ["run", "python", "-m", "pytest", "tests/", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                {
                    "owner": "pytest",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.+?):(\\d+): (.+)$",
                            "file": 1,
                            "line": 2,
                            "message": 3
                        }
                    ]
                }
            ]
        },
        {
            "label": "ruff: Lint",
            "type": "shell",
            "command": "uv",
            "args": ["run", "ruff", "check", "src/", "tests/"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                {
                    "owner": "ruff",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.+?):(\\d+):(\\d+): (.+?) (.+)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "code": 4,
                            "message": 5
                        }
                    ]
                }
            ]
        },
        {
            "label": "ruff: Format",
            "type": "shell",
            "command": "uv",
            "args": ["run", "ruff", "format", "src/", "tests/"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
